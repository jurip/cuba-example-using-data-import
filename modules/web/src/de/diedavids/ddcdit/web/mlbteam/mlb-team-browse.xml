<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="de.diedavids.ddcdit.web.mlbteam.MlbTeamBrowse"
        focusComponent="mlbTeamsTable"
        lookupComponent="mlbTeamsTable"
        messagesPack="de.diedavids.ddcdit.web.mlbteam">
    <dsContext>
        <groupDatasource id="mlbTeamsDs"
                         class="de.diedavids.ddcdit.entity.mlb.MlbTeam"
                         view="_local">
            <query>
                <![CDATA[select e from ddcdit$MlbTeam e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="mlbTeamsTable"
            spacing="true">
        <filter id="filter"
                applyTo="mlbTeamsTable"
                datasource="mlbTeamsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="mlbTeamsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="state"/>
                <column id="code"/>
            </columns>
            <rows datasource="mlbTeamsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="mlbTeamsTable.create"/>
                <button id="editBtn"
                        action="mlbTeamsTable.edit"/>
                <button id="removeBtn"
                        action="mlbTeamsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
